---
import HTMLLayout from "@/layouts/HTMLLayout.astro";
import { getEventsCollection, getMeetupsCollection } from "@/lib/collections";

const events = await getEventsCollection();
const meetups = await getMeetupsCollection();
---

<HTMLLayout>
  <h1 class="font-heading">Fork it! Community</h1>
  <ul>
    {
      events.map((event) => (
        <li>
          <a href={`events/${event.slug}`}>{event.data.name}</a>
        </li>
      ))
    }
  </ul>
  <ul>
    {
      meetups.map((meetup) => (
        <li>
          <a href={`meetups/${meetup.slug}`}>{meetup.data.name}</a>
        </li>
      ))
    }
  </ul>
</HTMLLayout>
