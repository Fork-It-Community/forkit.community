---
import "@fontsource/tomorrow/400.css";
import "@fontsource/tomorrow/500.css";
import "@fontsource-variable/inter";
import "@/styles/globals.css";
import "@/styles/orejime-custom.css";
import EnvHint from "@/components/EnvHint/EnvHint.astro";
import { Toaster } from "@/components/ui/sonner";
import { getOrejimeConfig } from "@/lib/orejime/config";
import dayjs from "dayjs";

// While in development, there are some "rest" from one page to another.
// This works well in production
dayjs.locale(Astro.currentLocale);

const pixelId = import.meta.env.PUBLIC_META_PIXEL_ID;
const orejimeConfig = getOrejimeConfig();
---

<html lang={Astro.currentLocale} class="dark">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover, interactive-widget=resizes-content"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Events"
      href="/events/rss.xml"
    />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Podcasts"
      href="/podcasts/rss.xml"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#171717" />
    <slot name="seo" />
    <slot name="ld+json" />

    <link rel="stylesheet" href="/orejime/orejime.css" />
    <script is:inline async src="/orejime/orejime.js"></script>
    <script is:inline define:vars={{ orejimeConfig }}>
      window.orejimeConfig = orejimeConfig;
    </script>
  </head>

  <body
    class="flex min-h-svh flex-col overflow-x-hidden overflow-y-scroll bg-black text-foreground"
  >
    <EnvHint />
    <slot />
    <Toaster client:load position="top-center" />

    <!-- Meta Pixel — blocked until consent -->
    <template data-purpose="marketing">
      <script is:inline define:vars={{ pixelId }}>
        !(function (f, b, e, v, n, t, s) {
          if (f.fbq) return;
          n = f.fbq = function () {
            n.callMethod
              ? n.callMethod.apply(n, arguments)
              : n.queue.push(arguments);
          };
          if (!f._fbq) f._fbq = n;
          n.push = n;
          n.loaded = !0;
          n.version = "2.0";
          n.queue = [];
          t = b.createElement(e);
          t.async = !0;
          t.src = v;
          s = b.getElementsByTagName(e)[0];
          s.parentNode.insertBefore(t, s);
        })(
          window,
          document,
          "script",
          "https://connect.facebook.net/en_US/fbevents.js",
        );
        fbq("init", pixelId);
        fbq("track", "PageView");
      </script>
      <noscript>
        <img
          height="1"
          width="1"
          style="display:none"
          src={`https://www.facebook.com/tr?id=${pixelId}&ev=PageView&noscript=1`}
        />
      </noscript>
    </template>

    <!-- Vercel Analytics — blocked until consent -->
    <template data-purpose="analytics">
      <script is:inline>
        var s = document.createElement("script");
        s.src = "/_vercel/insights/script.js";
        s.defer = true;
        document.head.appendChild(s);
      </script>
      <script type="text/javascript" is:inline>
        (function (c, l, a, r, i, t, y) {
          c[a] =
            c[a] ||
            function () {
              (c[a].q = c[a].q || []).push(arguments);
            };
          t = l.createElement(r);
          t.async = 1;
          t.src = "https://www.clarity.ms/tag/" + i;
          y = l.getElementsByTagName(r)[0];
          y.parentNode.insertBefore(t, y);
        })(window, document, "clarity", "script", "u0utyxyape");
      </script>
    </template>
  </body>
</html>
