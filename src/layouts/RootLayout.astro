---
import "@fontsource/tomorrow/400.css";
import "@fontsource/tomorrow/500.css";
import "@fontsource-variable/inter";
import "@/styles/globals.css";
import "@/styles/orejime-custom.css";
import EnvHint from "@/components/EnvHint/EnvHint.astro";
import { Toaster } from "@/components/ui/sonner";
import { getOrejimeConfig } from "@/lib/orejime/config";
import dayjs from "dayjs";

// While in development, there are some "rest" from one page to another.
// This works well in production
dayjs.locale(Astro.currentLocale);

const pixelId = import.meta.env.PUBLIC_META_PIXEL_ID;
const orejimeConfig = getOrejimeConfig();
---

<html lang={Astro.currentLocale} class="dark">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover, interactive-widget=resizes-content"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Events"
      href="/events/rss.xml"
    />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Podcasts"
      href="/podcasts/rss.xml"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#171717" />
    <slot name="seo" />
    <slot name="ld+json" />

    <link
      rel="preload"
      href="https://cdn.jsdelivr.net/npm/orejime@2/dist/orejime.css"
      as="style"
    />
    <link
      rel="preload"
      href="https://cdn.jsdelivr.net/npm/orejime@2/dist/orejime.js"
      as="script"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/orejime@2/dist/orejime.css"
    />

    <script is:inline define:vars={{ orejimeConfig }}>
      window.orejimeConfig = orejimeConfig;
    </script>

    <script
      is:inline
      async
      src="https://cdn.jsdelivr.net/npm/orejime@2/dist/orejime.js"
      onload="window.orejime = Orejime.init(window.orejimeConfig);"></script>
  </head>

  <body
    class="flex min-h-svh flex-col overflow-x-hidden overflow-y-scroll bg-black text-foreground"
  >
    <EnvHint />
    <slot />
    <Toaster client:idle />

    <!-- Meta Pixel — blocked until consent -->
    <script
      is:inline
      type="opt-in"
      data-type="application/javascript"
      data-name="meta-pixel"
      define:vars={{ pixelId }}
    >
      !(function (f, b, e, v, n, t, s) {
        if (f.fbq) return;
        n = f.fbq = function () {
          n.callMethod
            ? n.callMethod.apply(n, arguments)
            : n.queue.push(arguments);
        };
        if (!f._fbq) f._fbq = n;
        n.push = n;
        n.loaded = !0;
        n.version = "2.0";
        n.queue = [];
        t = b.createElement(e);
        t.async = !0;
        t.src = v;
        s = b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t, s);
      })(
        window,
        document,
        "script",
        "https://connect.facebook.net/en_US/fbevents.js",
      );
      fbq("init", pixelId);
      fbq("track", "PageView");
    </script>

    <!-- Vercel Analytics — blocked until consent -->
    <script
      is:inline
      type="opt-in"
      data-type="application/javascript"
      data-name="vercel-analytics"
    >
      var s = document.createElement("script");
      s.src = "/_vercel/insights/script.js";
      s.defer = true;
      document.head.appendChild(s);
    </script>
  </body>
</html>
