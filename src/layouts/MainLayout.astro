---
import MainNavDesktop from "@/components/MainNavDesktop/MainNavDesktop.astro";
import MainNavMobile from "@/components/MainNavMobile/MainNavMobile.astro";
import RootLayout from "@/layouts/RootLayout.astro";

import Footer from "@/components/Footer/index.astro";
import { Logo } from "@/components/Logo";
import { Search } from "@/components/Search";
---

<RootLayout>
  <slot name="seo" slot="seo" />
  <slot name="ld+json" slot="ld+json" />
  <MainNavDesktop />
  <div class="flex w-full items-center justify-center pb-4 pt-16 md:hidden">
    <a href="/"><Logo className="w-48" /></a>
  </div>
  <div class="flex flex-1 flex-col"><slot /></div>
  <Search client:load />
  <Footer />
  <MainNavMobile />
</RootLayout>
