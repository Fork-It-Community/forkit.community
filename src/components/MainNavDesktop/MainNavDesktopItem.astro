---
import { cn } from "@/lib/utils";
import type { FC } from "react";

interface Props {
  icon: FC;
  href: string;
  exact?: boolean;
}

const { icon: Icon, href, exact } = Astro.props;
const isActive = exact
  ? href === Astro.url.pathname
  : Astro.url.pathname.startsWith(href);
---

<a
  href={href}
  class={cn(
    "flex items-center gap-2 justify-center py-3",
    !isActive && "opacity-50",
    isActive && "text-white",
  )}
>
  <span class="text-lg"><Icon /></span>
  <span class="text-base tracking-wide"><slot /></span>
</a>
