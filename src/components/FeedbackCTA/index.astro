---
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";

interface Props {
  href: string;
}

const { href } = Astro.props;
---

<div class="relative flex w-full flex-col gap-6 px-6 py-12">
  <a
    href={href}
    target="_blank"
    rel="noreferer"
    class="max-w-(--breakpoint-md) group mx-auto flex w-full flex-col items-start gap-6 rounded-lg bg-white/5 p-8 backdrop-blur-md transition hover:bg-white/10 md:flex-row md:items-center md:px-12 md:py-10"
  >
    <div class="flex flex-1 flex-col">
      <h2
        class="font-heading group-hover:text-primary text-balance text-xl font-medium uppercase tracking-widest transition"
      >
        We need you!
      </h2>
      <p class="text-balance text-base tracking-wide opacity-60">
        Help speakers by giving them feedbacks about their talks
      </p>
    </div>

    <div class={cn(buttonVariants({ size: "lg" }), "max-xs:w-full")}>
      Give Talk Feedback
    </div>
  </a>
</div>
