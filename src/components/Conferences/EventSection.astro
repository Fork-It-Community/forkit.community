---
import type { EventComputed } from "@/lib/events";
import ConferenceCard from "./ConferenceCard.astro";

interface Props {
  event: EventComputed;
}

const { event } = Astro.props;
---

<div class="flex flex-col gap-4">
  <h2 class="text-xl">{event.data._computed.name}</h2>
  <div class="flex flex-col gap-8 sm:grid sm:grid-cols-2">
    {
      event.data.schedule?.items?.map((conference) => (
        <ConferenceCard conferenceSlug={conference.slug} event={event} />
      ))
    }
  </div>
</div>
