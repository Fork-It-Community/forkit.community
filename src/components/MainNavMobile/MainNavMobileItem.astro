---
import { cn } from "@/lib/utils-client";
import type { FC } from "react";

interface Props {
  icon: FC;
  href: string;
  exact?: boolean;
}

const { icon: Icon, href, exact } = Astro.props;
const isActive = exact
  ? href === Astro.url.pathname
  : Astro.url.pathname.startsWith(href);
---

<a
  href={href}
  class={cn(
    "flex flex-1 flex-col items-center justify-center py-3 opacity-50",
    isActive && "opacity-100",
  )}
>
  <span class="text-2xl"><Icon /></span>
  <span class="text-[0.6rem] tracking-wide"><slot /></span>
</a>
