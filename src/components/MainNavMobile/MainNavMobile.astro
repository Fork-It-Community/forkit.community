---
import MainNavMobileItem from "./MainNavMobileItem.astro";
import MainNavMobileItemMore from "./MainNavMobileItemMore";
import { getMainMenuMobileItems } from "@/content/menus";
---

<div class="md:hidden">
  <div class="h-14"></div>
  <div class="bg-background-blur fixed bottom-0 left-0 right-0 z-20 flex h-14">
    {
      getMainMenuMobileItems("primary").map((item) => (
        <MainNavMobileItem
          icon={item.icon}
          href={item.href}
          exact={item.exact ?? false}
        >
          {item.label}
        </MainNavMobileItem>
      ))
    }
    <MainNavMobileItemMore client:load currentPathname={Astro.url.pathname} />
  </div>
</div>
