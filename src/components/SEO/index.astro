---
import { SEO } from "astro-seo";
import type { ComponentProps } from "astro/types";

interface Props
  extends Pick<ComponentProps<typeof SEO>, "title" | "description"> {
  image?: NonNullable<
    ComponentProps<typeof SEO>["openGraph"]
  >["basic"]["image"];
  imageAlt?: string;
  url?: NonNullable<ComponentProps<typeof SEO>["openGraph"]>["basic"]["url"];
}

const {
  title,
  description = "Fork it! Communityâ€™s mission is to share computer science knowledge through worldwide events.",
  image,
  imageAlt,
  url = Astro.url,
} = Astro.props;

const ogImage = new URL("/opengraph-image.jpg", Astro.site);
const ogImageAlt = "Fork it! Community";
const titleDefault = "Fork it! Community | Global Developer Community";
---

<SEO
  title={title ?? ""}
  titleTemplate="%s | Fork it! Community"
  titleDefault={titleDefault}
  description={description ?? ""}
  openGraph={{
    basic: {
      title: title ?? titleDefault,
      type: "website",
      image: image ?? ogImage.toString(),
      url: url ?? "",
    },
    optional: {
      description,
    },
    image: {
      alt: imageAlt ?? ogImageAlt,
    },
  }}
  twitter={{
    card: "summary_large_image",
    title: title ?? titleDefault ?? "",
    description: description ?? "",
    image: image ?? ogImage.toString(),
    imageAlt: imageAlt ?? ogImageAlt,
  }}
/>
