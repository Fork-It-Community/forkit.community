---
import { buttonVariants } from "@/components/ui/button";
import type { CollectionEntry } from "astro:content";
import { MdMail } from "react-icons/md";

interface Props {
  event: CollectionEntry<"events">;
}

const { event } = Astro.props;
---

<div
  class="mx-auto flex max-w-7xl flex-col items-center gap-6 px-6 py-24 sm:py-32"
>
  <h2
    class="font-heading text-3xl font-bold tracking-tight text-white sm:text-4xl"
  >
    Schedule is coming soon !
  </h2>

  <a
    href={`mailto:rudy@forkit.community?subject=${event.data.date?.getFullYear()} ${
      event.data.city
    } ${event.data.country} Sponsorship`}
    class={buttonVariants()}
  >
    Contact Us<MdMail className="ml-2 h-4 w-4" />
  </a>
</div>
