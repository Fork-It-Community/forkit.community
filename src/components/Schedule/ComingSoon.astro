---
import type { CollectionEntry } from "astro:content";
import { RiSpeakLine } from "react-icons/ri";

interface Props {
  event: CollectionEntry<"events">;
}
---

<div
  class="flex min-h-32 flex-1 flex-col items-center justify-center gap-8 rounded-lg bg-white/5 p-4"
>
  <p class="text-lg tracking-wider text-white/60">Schedule is coming soon!</p>
  <div class="flex w-96 flex-1 flex-col gap-4">
    <div class="rounded-md border border-white/40 bg-white/20 p-4">
      <p class="text-lg">Welcome</p>
      <p class="text-sm">Visitor reception</p>
    </div>
    <div
      class="flex items-center justify-between rounded-md border border-white/20 bg-white/5 p-4"
    >
      <div>
        <p class="text-lg">Conferences</p>
        <p class="text-sm">Speaker</p>
      </div>
      <RiSpeakLine size={32} className="text-white/60" />
    </div>
    <div
      class="flex items-center justify-between rounded-md border border-white/20 bg-white/5 p-4"
    >
      <div>
        <p class="text-lg">Workshops</p>
        <p class="text-sm">All together</p>
      </div>
      <RiSpeakLine size={32} className="text-white/60" />
    </div>
    <div class="rounded-md border border-white/40 bg-white/20 p-4">
      <p class="text-lg">Networking cocktail</p>
      <p class="text-sm">Have a drink and share your experience</p>
    </div>
    <div class="rounded-md border border-white/40 bg-white/20 p-4">
      <p class="text-lg">Roundtable</p>
      <p class="text-sm">Have a drink and share your experience</p>
    </div>
  </div>
  <div class="flex gap-4">
    <div class="rounded-sm border border-primary px-6 py-2 text-center">
      <p class="text-lg font-bold">10+</p>
      <p class="text-sm">Speakers</p>
    </div>
    <div class="rounded-sm border border-primary px-6 py-2 text-center">
      <p class="text-lg font-bold">4</p>
      <p class="text-sm">Booths</p>
    </div>
    <div class="rounded-sm border border-primary px-6 py-2 text-center">
      <p class="text-lg font-bold">15+</p>
      <p class="text-sm">Countries</p>
    </div>
    <div class="rounded-sm border border-primary px-6 py-2 text-center">
      <p class="text-lg font-bold">200+</p>
      <p class="text-sm">Attendees</p>
    </div>
  </div>
</div>
